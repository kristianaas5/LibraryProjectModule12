@model LibraryProjectModule12.ViewModels.LibraryShelvesViewModel

@{
    ViewData["Title"] = "My Library";
}

<h1>My Library</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Want to Read</h3>
        @if (Model.WantToRead.Any())
        {
            <ul class="list-group mb-4">
                @foreach (var item in Model.WantToRead)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@item.Book?.Name (@item.Book?.Year)</span>
                        <span class="text-muted">by @item.Book?.Author?.LastName, @item.Book?.Author?.Name</span>
                        <span class="ms-auto">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            }
                        </span>
                    </li>
                }
            </ul>
        }
        else { <p class="text-muted">No items.</p> }

        <h3>Currently Reading</h3>
        @if (Model.CurrentlyReading.Any())
        {
            <ul class="list-group mb-4">
                @foreach (var item in Model.CurrentlyReading)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@item.Book?.Name (@item.Book?.Year)</span>
                        <span class="text-muted">by @item.Book?.Author?.LastName, @item.Book?.Author?.Name</span>
                        <span class="ms-auto">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            }
                        </span>
                    </li>
                }
            </ul>
        }
        else { <p class="text-muted">No items.</p> }
    </div>

    <div class="col-md-6">
        <h3>Read</h3>

        <h5 class="mt-2">Reviewed</h5>
        @if (Model.ReadReviewed.Any())
        {
            <ul class="list-group mb-3">
                @foreach (var item in Model.ReadReviewed)
                {
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@item.Book?.Name</strong> (@item.Book?.Year)
                                <div class="text-muted">by @item.Book?.Author?.LastName, @item.Book?.Author?.Name</div>
                            </div>
                            <div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                }
                            </div>
                        </div>
                        @if (item.Reviews != null && item.Reviews.Any())
                        {
                            <div class="mt-2">
                                @foreach (var r in item.Reviews)
                                {
                                    <div>Rating: @r.Rating</div>
                                    <div class="text-muted">@r.ReviewText</div>
                                }
                            </div>
                        }
                    </li>
                }
            </ul>
        }
        else { <p class="text-muted">No reviewed books.</p> }

        <h5 class="mt-3">Not Reviewed</h5>
        @if (Model.ReadNotReviewed.Any())
        {
            <ul class="list-group mb-3">
                @foreach (var item in Model.ReadNotReviewed)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@item.Book?.Name</strong> (@item.Book?.Year)
                            <div class="text-muted">by @item.Book?.Author?.LastName, @item.Book?.Author?.Name</div>
                        </div>
                        <div class="ms-auto d-flex gap-2">
                            <a asp-controller="Reviews" asp-action="Create" asp-route-libraryId="@item.Id" class="btn btn-sm btn-success">Add Review</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            }
                        </div>
                    </li>
                }
            </ul>
        }
        else { <p class="text-muted">No books awaiting review.</p> }
    </div>
</div>

@if (TempData["Success"] is string successMsg)
{
    <div class="alert alert-success d-flex justify-content-between align-items-center">
        <span>@successMsg</span>
        <span class="ms-3">
            @if (TempData["UndoLibraryId"] is int undoLibId)
            {
                <form asp-controller="Libraries" asp-action="Restore" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@undoLibId" />
                    <button type="submit" class="btn btn-sm btn-outline-dark">Undo</button>
                </form>
            }
            @if (TempData["UndoReviewId"] is int undoReviewId)
            {
                <form asp-controller="Reviews" asp-action="Restore" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@undoReviewId" />
                    <button type="submit" class="btn btn-sm btn-outline-dark">Undo</button>
                </form>
            }
        </span>
    </div>
}