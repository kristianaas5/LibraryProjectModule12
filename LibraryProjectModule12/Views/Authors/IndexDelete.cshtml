@model IEnumerable<LibraryProjectModule12.Models.Author>

@{
    ViewData["Title"] = "Deleted Authors";
}

<h1>Deleted Authors</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().LastName)</th>
            <th>@Html.DisplayNameFor(m => m.First().Country)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.Country</td>
                <td class="text-nowrap">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Restore" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Undo</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>