@model LibraryProjectModule12.Models.Author

@{
    ViewData["Title"] = "Author Details";
}

<h1>Author Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.LastName)</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Country)</dt>
            <dd class="col-sm-9">@Model.Country</dd>
        </dl>

        <div class="mt-3">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            }
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>