<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryProjectModule12</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryProjectModule12.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LibraryProjectModule12</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- HOME -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {

                            <!-- AUTHORS -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Authors" asp-action="Index">Authors</a>
                            </li>
                            <!-- GENRES -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Genres" asp-action="Index">Genres</a>
                            </li>

                            <!-- LIBRARY -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Libraries" asp-action="Index">Library</a>
                            </li>
                            <!-- BOOKS -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Books" asp-action="Index">Books</a>
                            </li>
                            <!--EVENTS-->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    Events
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Events" asp-action="All">All Events</a>
                                    </li>
                                    @if (User.Identity?.IsAuthenticated == true && !User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Events" asp-action="My">My Events</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        Deleted Items
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Authors" asp-action="IndexDelete">Deleted Authors</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Genres" asp-action="IndexDelete">Deleted Genres</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Books" asp-action="IndexDelete">Deleted Books</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Events" asp-action="IndexDelete">Deleted Events</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - LibraryProjectModule12 <a asp-area="" asp-controller="Home"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
