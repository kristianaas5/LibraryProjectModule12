@model IEnumerable<LibraryProjectModule12.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Add New Book</a>
    }
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Year)</th>
            <th>Author</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Name</td>
            <td>@item.Year</td>
            <td>@(item.Author != null ? $"{item.Author.LastName}, {item.Author.Name}" : "[deleted]")</td>
            <td>@item.Genre?.Name</td>
            <td class="text-nowrap">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>

                @* Show Add to My Library only for authenticated NON-Admin users *@
                @if (User.Identity?.IsAuthenticated == true && !User.IsInRole("Admin"))
                {
                    <form asp-controller="Libraries" asp-action="AddFromBook" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="bookId" value="@item.Id" />
                        <input type="hidden" name="shelfType" value="@LibraryProjectModule12.Models.ShelfType.WantToRead" />
                        <button type="submit" class="btn btn-sm btn-success">Add to My Library</button>
                    </form>
                }

                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>