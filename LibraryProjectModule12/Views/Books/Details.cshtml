@model LibraryProjectModule12.Models.Book
@using LibraryProjectModule12.Models

@{
    ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Year)</dt>
            <dd class="col-sm-9">@Model.Year</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@((Model.Author != null) ? $"{Model.Author.LastName}, {Model.Author.Name}" : "[deleted]")</dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Genre?.Name</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>

        <div class="mt-3 d-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>

            @* Show Add to My Library only for authenticated NON-Admin users *@
            @if (User.Identity?.IsAuthenticated == true && !User.IsInRole("Admin"))
            {
                <form asp-controller="Libraries" asp-action="AddFromBook" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="bookId" value="@Model.Id" />
                    <input type="hidden" name="shelfType" value="@ShelfType.WantToRead" />
                    <button type="submit" class="btn btn-success btn-sm">Add to My Library</button>
                </form>
            }

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
            }
        </div>
    </div>
</div>

@if (TempData["Success"] is string successMsg)
{
    <div class="alert alert-success mt-3">@successMsg</div>
}
@if (TempData["Info"] is string infoMsg)
{
    <div class="alert alert-info mt-3">@infoMsg</div>
}
@if (TempData["Error"] is string errorMsg)
{
    <div class="alert alert-danger mt-3">@errorMsg</div>
}