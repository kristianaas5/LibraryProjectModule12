@model LibraryProjectModule12.ViewModels.EventViewModel
@using LibraryProjectModule12.ViewModels

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Date)</dt>
            <dd class="col-sm-9">@Model.Date</dd>
        </dl>

        <div class="mt-3 d-flex gap-2">
            <a asp-action="All" class="btn btn-secondary">Back to List</a>

            @if (User.Identity?.IsAuthenticated == true && !User.IsInRole("Admin"))
            {
                <a asp-action="EventUser" asp-route-id="@Model.Id" class="btn btn-success btn-sm">Participate in Event</a>
            }

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
            }
        </div>
    </div>
</div>

@if (TempData["Success"] is string successMsg)
{
    <div class="alert alert-success mt-3">@successMsg</div>
}
@if (TempData["Info"] is string infoMsg)
{
    <div class="alert alert-info mt-3">@infoMsg</div>
}
@if (TempData["Error"] is string errorMsg)
{
    <div class="alert alert-danger mt-3">@errorMsg</div>
}