@model IEnumerable<LibraryProjectModule12.ViewModels.EventViewModel>

@{
    ViewData["Title"] = "All Events";
}

<h2 class="text-center mb-4">All Events</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No events available at the moment.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Date.ToString("dd-MMM-yy HH:mm:ss")</td>
                    <td>
                        <a asp-action="EventUser" asp-route-id="@item.Id"
                           class="btn btn-sm btn-cyan">
                            Participate in Event
                        </a>
                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
}